<%  if @amenity.errors.any? %>

<h3> These errors prohibited creating the amentiy</h3>

<ul>
<% @amenity.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for(@amenity, remote:true) do |f| %>
<div class="form-group">
<%= f.label :AmentityName %>

<%= f.text_field :name %>
</div>
<div class="form-group">
<%= f.label :Description %>

<%= f.text_area :description %>
</div>

<%= f.submit class: "btn btn-secondary" %>
<% end %>