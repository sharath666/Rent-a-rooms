


<div class="row">
<div class="col-md-8">
<div class="page-header">
<h2> Listing Cities</h2>
</div>
<ul class="list-group" id="cityList" >
<% City.all.each do |city| %>
  <li class="list-group-item">

    <span class="badge"><%=city.rooms.length %></span>
    <%= link_to city.name, city %>
  </li>

  <% end %>
</ul>
</div>
<div class="col-md-4">
<div class="page-header">
<h2>Add a city</h2>
</div>
<div id="errorMsg"></div>
<% if can? :create, City.new %>
<%= render 'form' %>
<% end %>
</div>
</div>

</div>
